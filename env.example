# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-vision-preview

# Alternative AI Services (uncomment to use)
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_CLOUD_CREDENTIALS_PATH=path/to/credentials.json

# Voice Configuration
VOICE_ACTIVATION_KEY=f1
SPEECH_RECOGNITION_TIMEOUT=5
SPEECH_RECOGNITION_PHRASE_TIMEOUT=1
TTS_RATE=200
TTS_VOLUME=0.9

# Screen Capture Configuration
SCREENSHOT_INTERVAL=0.5
IMAGE_QUALITY=85
CAPTURE_REGION_AUTO=true

# Audio Configuration
AUDIO_DEVICE_INDEX=-1  # -1 for default
SAMPLE_RATE=44100
CHANNELS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agc.log
LOG_ROTATION=10MB

# Development Settings
DEBUG_MODE=false
SAVE_SCREENSHOTS=false
SAVE_AUDIO_RECORDINGS=false

# Game Integration
SUPPORTED_GAMES=all  # or comma-separated list
GAME_DETECTION_METHOD=window_title

# Performance Settings
MAX_CONCURRENT_REQUESTS=3
RESPONSE_CACHE_SIZE=100
IMAGE_PROCESSING_THREADS=2
